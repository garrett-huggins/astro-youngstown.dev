---
export interface Props {
	name: string;
	title?: string;
	description: Element | string;
	src?: string;
}

const { name, title, description, src } = Astro.props;
---

<div class="team-member">
	{src && <img src={src} alt={name} />}
	<h3>{name}</h3>
	{
		title && (
			<p>
				<b>{title}</b>
			</p>
		)
	}
	<p>{description}</p>
</div>

<style>
	.team-member {
		max-width: 400px;

		border: 2px solid black;
		border-radius: 8px;
		padding: 2em;

		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: flex-end;
		gap: 0.5em;
	}

	.team-member img {
		width: 70%;
		margin: 0;

		border-radius: 50%;
	}

	.team-member h3 {
		margin: 0;
	}

	.team-member p {
		margin: 0;
	}
</style>
