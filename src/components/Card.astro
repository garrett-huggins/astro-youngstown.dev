---
export interface Props {
	name: string;
	title?: string;
	description: Element | string;
	src?: string;
	color?: "white" | "black";
}

const { name, title, description, src, color = "black" } = Astro.props;
---

<div class:list={["team-member", { white: color === "white" }]}>
	{
		src && (
			// The extra div is needed to prevent the image from stretching
			<div>
				<img src={src} alt={name} />
			</div>
		)
	}
	<h3>{name}</h3>
	{
		title && (
			<p>
				<b>{title}</b>
			</p>
		)
	}
	<p>{description}</p>
</div>

<style>
	.team-member {
		max-width: 400px;

		border: 2px solid black;
		border-radius: 8px;
		padding: 2em;

		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 0.5em;
	}

	.team-member.white {
		border-color: white;
		color: white;
	}

	.team-member img {
		width: 70%;
		margin: 0;

		border-radius: 50%;
	}

	.team-member h3 {
		margin: 0;
	}

	.team-member p {
		margin: 0;
	}
</style>
