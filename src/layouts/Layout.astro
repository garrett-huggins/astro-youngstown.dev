---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>
		<header class="p-3 bg-purple-600 text-white text-xl font-bold">
			Dev Youngstown
		</header>

		<slot />

		<footer class="p-1 bg-black text-white text-right">
			Copyright Dev Youngstown, LLC {new Date().getFullYear().toString()}
		</footer>

		<script async defer src="https://sa.youngstown.dev/latest.js"></script>
		<noscript
			><img
				src="https://sa.youngstown.dev/noscript.gif"
				alt=""
				referrerpolicy="no-referrer-when-downgrade"
			/></noscript
		>
	</body>
</html>
